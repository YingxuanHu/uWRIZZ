{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "gradlew assembleDebug",
      "type": "shell",
      "command": "./gradlew",
      "args": [
        "assembleDebug"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": [
        "$gradle"
      ],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "gradlew installDebug",
      "type": "shell",
      "command": "./gradlew",
      "args": [
        "installDebug"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": "build",
      "dependsOn": "gradlew assembleDebug",
      "problemMatcher": [
        "$gradle"
      ],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "adb install debug apk",
      "type": "shell",
      "command": "adb",
      "args": [
        "install",
        "-r",
        "${workspaceFolder}/app/build/outputs/apk/debug/app-debug.apk"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": []
    }
  ]
}
